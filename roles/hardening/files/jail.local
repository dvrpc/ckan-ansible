[DEFAULT]

# how long to ban
bantime = 1h
# after this many failed attempts
maxretry = 4
# in this long of a period 
findtime = 24h

# "bantime.increment" to search db of previously banned IPs and increase bantime 
bantime.increment = true

# coefficient to calculate exponent growing of the formula or common multiplier
bantime.factor = 1

# we use multipliers instead of formula
bantime.multipliers = 1 2 12 24 168

[sshd]
enabled = true
